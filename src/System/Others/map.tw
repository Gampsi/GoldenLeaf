:: map [widget nobr]

<<widget "map">>/* Hippity Hoppity, get off my property */
    <<set _mID to setup.mapStreets.findIndex(x => x.place === passage())>>

    <<if _mID isnot -1>>
        <br>
        <svg width="416" height="350" style="border: 0.2px solid #383e65; border-radius: 5px;">
            <image href="img/others/Map.png" height="100%" width="100%"></image>
            
            <a onclick="passageMov(0, 'Clove_Row');">
                <rect id="Clove_Row" class="map" x="140" y="40" height="32" width="65">
                <title>To Clove Row +8 min.</title>
            </a> 
            <a onclick="passageMov(1, 'Blythe_Celyn');">
                <rect id="Blythe_Celyn" class="map" x="98" y="69" height="76" width="34">
                <title>To Blythe Celyn +7 min.</title>
            </a>
            <a onclick="passageMov(2, 'Barlow_Grove');">
                <rect id="Barlow_Grove" class="map" x="98" y="168" height="83" width="34">
                <title>To Barlow Grove +9 min.</title>
            </a>
            <a onclick="passageMov(3, 'Hollins_Drift');">
                <rect id="Hollins_Drift" class="map" x="226" y="114" height="34" width="73">
                <title>To Hollins Drift +6 min.</title>
            </a>
            <a onclick="passageMov(4, 'Pioneer_Lane');">
                <rect id="Pioneer_Lane" class="map" x="341" y="96" height="70" width="36">
                <title>To Pioneer Lane +8 min.</title>
            </a>
            <a onclick="passageMov(5, 'Ashrout');">
                <rect id="Ashrout" class="map" x="110" y="286" height="34" width="56">
                <title>To Ashrout +4 min.</title>
            </a>
            <a onclick="passageMov(6, 'Shopping_Center');">
                <rect id="Shopping_Center" class="map" x="199" y="185" height="45" width="50">
                <title>To Shopping Center  +6 min.</title>
            </a>
            <a onclick="passageMov(7, 'GLCC');">
                <rect id="GLCC" class="map" x="25" y="274" height="48" width="53">
                <title>To Golden Leaf Central College  +3 min.</title>
            </a>
            <image href="img/others/mapLoc.png" id="location" x="131" y="43" height="8%" width="8%"></img>
        </svg>
        <<timed 40ms>>
            <<run _imgLoc = document.querySelector("#location");
                _imgLoc.setAttributeNS(null, "x", $mapCoord.x);
                _imgLoc.setAttributeNS(null, "y", $mapCoord.y);>>
        <</timed>>
        <<script>>
            /* Parameters: placeid=Is the id of the passage in mapPlace. time=time used for timeattached widget.
               It compares if the current passage connects to the passage that the players want to move to.
            */
            window.passageMov = function(placeid, placeName) {
                var id = setup.mapStreets.findIndex(x => x.place === State.passage);
                var connts = setup.mapStreets[id].connectedTo;
                var moveTo = setup.mapStreets[placeid].place;
                var time = setup.mapStreets[placeid].timeTo;

                if (connts.includes(moveTo)) {
                    Engine.play(moveTo);
                    wikifier("timeattached", time);
                    
                    var placeN = document.getElementById(placeName);
                    State.variables.mapCoord.x = placeN.getAttributeNS(null, "x");
                    State.variables.mapCoord.y = placeN.getAttributeNS(null, "y");
                }
            }

        <</script>>
    <</if>>
    
<</widget>>